<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/container_fundo_branco_contorno_fino"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:padding="15dp">

    <TextView
        android:id="@+id/nome_descricao_completa"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:gravity="center"
        android:inputType="text"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <TextView
        android:id="@+id/nome_layout_pai_descricao_completa"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/quantidade_descricao_completa"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="5"
        android:text="12"
        app:layout_constraintStart_toEndOf="@id/nome_descricao_completa"
        app:layout_constraintEnd_toStartOf="@+id/largura_descricao_completa"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toStartOf="@+id/altura_descricao_completa"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/altura_descricao_completa"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="5"
        android:text="12"
        app:layout_constraintEnd_toStartOf="@+id/id_descricao_completa"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/largura_descricao_completa"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="5"
        android:text="12"
        app:layout_constraintEnd_toStartOf="@+id/altura_descricao_completa"
        app:layout_constraintStart_toEndOf="@+id/quantidade_descricao_completa"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/id_descricao_completa"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>